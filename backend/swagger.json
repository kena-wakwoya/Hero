        "/auth/resend-verification-code": {
            "post": {
                "description": "Request a user verification code resend",
                "tags": ["User"],
                "parameters": [
                    {
                        "in": "body",
                        "schema": {
                            "required": ["email"],
                            "properties": {
                                "email": {
                                    "type": "string"
                                }
                            }
                        }
                    }
