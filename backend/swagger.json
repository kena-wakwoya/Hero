                        }
                    },
                    "422": {
                        "schema": {
                            "$ref": "#/definitions/genericErrorResponse"
                        }
                    },
                    "500": {
                        "schema": {
                            "$ref": "#/definitions/genericErrorResponse"
                        }
                    }
                }
            }
        },
        "/auth/request-password-reset": {
            "post": {
                "description": "Request a user password reset",
                "tags": ["User"],
                "parameters": [
                    {
                        "in": "body",
                        "schema": {
                            "required": ["email"],
                            "properties": {
                                "email": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "produces": ["application/json"],
                "responses": {
                    "200": {
