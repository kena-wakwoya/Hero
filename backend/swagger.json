        "/auth/verification-code-details/{code}": {
            "parameters": [
                {
                    "name": "code",
                    "in": "path",
                    "required": true,
                    "description": "Verification code",
                    "type": "string"
                }
            ],
            "get": {
                "description": "Get the details of a verification code",
                "tags": ["User"],
                "produces": ["application/json"],
                "responses": {
                    "200": {
                        "schema": {
                            "$ref": "#/definitions/getCodeDetailsResponse"
