        "/auth/User/create": {
            "post": {
                "tags": ["User"],
                "description": "Create a new User",
                "parameters": [
                    {
                        "in": "body",
                        "schema": {
                            "$ref": "#/definitions/createUserPayload"
                        }
                    }
                ],
                "produces": ["application/json"],
                "responses": {
                    "204": {
                        "description": "User was successfully created"
