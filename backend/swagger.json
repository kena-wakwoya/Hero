                        }
                    },
                    "500": {
                        "schema": {
                            "$ref": "#/definitions/genericErrorResponse"
                        }
                    }
                }
            }
        },
        "/User/profile/update": {
            "post": {
                "tags": ["User"],
                "description": "Update a User user",
                "parameters": [
                    {
                        "in": "body",
                        "schema": {
                            "required": ["username", "role", "industries"],
                            "properties": {
                                "username": {
                                    "type": "string"
                                },
                                "role": {
                                    "type": "string"
                                },
                                "industries": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "produces": ["application/json"],
                "responses": {
                    "401": {
                        "schema": {
                            "$ref": "#/definitions/genericErrorResponse"
                        }
                    },
                    "403": {
                        "schema": {
                            "$ref": "#/definitions/genericErrorResponse"
                        }
                    },
                    "200": {
                        "description": "user was successfully updated",
                        "schema": {
                            "$ref": "#/definitions/user"
                        }
                    },
                    "422": {
                        "schema": {
                            "$ref": "#/definitions/genericErrorResponse"
                        }
                    },
                    "500": {
                        "schema": {
                            "$ref": "#/definitions/genericErrorResponse"
                        }
                    }
                }
            }
        },
        "/User/profile/check-site-name/{username}": {
            "parameters": [
                {
                    "name": "username",
                    "in": "path",
                    "required": true,
                    "description": "The site name",
                    "type": "string"
                }
            ],
            "get": {
                "description": "Check if the User user site name is available",
                "tags": ["User"],
                "produces": ["application/json"],
                "responses": {
                    "401": {
                        "schema": {
                            "$ref": "#/definitions/genericErrorResponse"
                        }
                    },
                    "403": {
                        "schema": {
                            "$ref": "#/definitions/genericErrorResponse"
                        }
                    },
                    "200": {
                        "schema": {
                            "required": ["status", "is_available"],
                            "properties": {
                                "status": {
                                    "type": "string"
                                },
                                "is_available": {
                                    "type": "boolean"
                                }
                            }
                        }
                    },
                    "422": {
                        "schema": {
                            "$ref": "#/definitions/genericErrorResponse"
                        }
                    },
                    "500": {
                        "schema": {
                            "$ref": "#/definitions/genericErrorResponse"
                        }
                    }
                }
            }
        },
        "/User/profile/set-site-name": {
            "post": {
                "tags": ["User"],
                "description": "Set the site name of a User user",
                "parameters": [
                    {
                        "in": "body",
                        "schema": {
                            "required": ["username"],
                            "properties": {
                                "username": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "produces": ["application/json"],
                "responses": {
                    "401": {
                        "schema": {
                            "$ref": "#/definitions/genericErrorResponse"
                        }
                    },
                    "403": {
                        "schema": {
                            "$ref": "#/definitions/genericErrorResponse"
                        }
                    },
                    "200": {
                        "schema": {
                            "required": ["status", "is_available"],
                            "properties": {
                                "status": {
                                    "type": "string"
                                },
                                "is_available": {
                                    "type": "boolean"
                                },
                                "user": {
                                    "type": "object",
                                    "$ref": "#/definitions/user"
                                }
                            }
                        }
                    },
                    "422": {
                        "schema": {
                            "$ref": "#/definitions/genericErrorResponse"
                        }
                    },
                    "500": {
                        "schema": {
                            "$ref": "#/definitions/genericErrorResponse"
                        }
                    }
                }
            }
        },
        "/auth/login": {
            "post": {
                "description": "Login user",
                "tags": ["User"],
                "parameters": [
                    {
                        "in": "body",
