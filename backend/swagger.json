        "/auth/reset-ser-password": {
            "post": {
                "description": "Reset the user's password using reset code",
                "tags": ["User"],
                "parameters": [
                    {
                        "in": "body",
                        "schema": {
                            "required": ["code", "email"],
                            "properties": {
                                "code": {
                                    "type": "string"
                                },
                                "email": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "produces": ["application/json"],
                "responses": {
                    "200": {
                        "schema": {
                            "$ref": "#/definitions/genericSuccessResponse"
                        }
                    },
                    "404": {
