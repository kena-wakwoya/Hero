        "/auth/reset-code-details/{code}": {
            "parameters": [
                {
                    "name": "code",
                    "in": "path",
                    "required": true,
                    "description": "Reset code",
                    "type": "string"
                }
            ],
            "get": {
                "description": "Get the details of a reset password code",
                "tags": ["User"],
                "produces": ["application/json"],
                "responses": {
                    "200": {
                        "schema": {
