    "definitions": {
        "codeDetails": {
            "required": ["first_name", "last_name", "value", "email"],
            "properties": {
                "value": {
                    "type": "string"
                },
                "first_name": {
                    "type": "string"
                },
                "last_name": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                }
            }
        },
        "getCodeDetailsResponse": {
            "required": ["status", "code"],
            "properties": {
                "status": {
                    "type": "string"
                },
                "code": {
                    "type": "object",
                    "$ref": "#/definitions/codeDetails"
                }
            }
        },
        "industry": {
            "required": ["_id", "name"],
            "properties": {
                "_id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                }
            }
        },
        "setNewUserPasswordPayload": {
            "required": ["code", "password"],
            "properties": {
                "code": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            }
        },
        "genericSuccessResponse": {
            "required": ["status"],
            "properties": {
                "message": {
                    "type": "string"
                },
                "status": {
                    "type": "string",
                    "default": "success"
                },
                "errorCode": {
                    "type": "string"
                }
            }
        },
        "genericErrorResponse": {
            "required": ["message", "status"],
            "properties": {
                "message": {
                    "type": "string"
                },
                "status": {
                    "type": "string",
                    "default": "error"
                },
                "errorCode": {
                    "type": "string"
                }
            }
        },
        "loginPayload": {
            "required": ["email", "password"],
            "properties": {
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            }
        },
        "createUserPayload": {
            "required": ["email", "username", "first_name", "last_name"],
            "properties": {
                "username": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "first_name": {
                    "type": "string"
                },
                "last_name": {
                    "type": "string"
                }
            }
        },
        "user": {
            "required": ["_id", "username", "email", "role", "industries", "logo"],
            "properties": {
                "_id": {
                    "type": "string"
                },
                "username": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "role": {
                    "type": "string"
                },
                "industries": {
                    "type": "array",
                    "$ref": "#/definitions/industry"
                },
                "logo": {
                    "type": "string"
                },
                "username": {
                    "type": "string"
                }
            }
        },
        "user": {
            "required": ["email", "_id", "first_name", "last_name", "onboarding_step"],
            "properties": {
                "_id": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "first_name": {
                    "type": "string"
                },
                "last_name": {
                    "type": "string"
                },
                "is_User": {
                    "type": "boolean"
                },
                "is_User_owner": {
                    "type": "boolean"
                },
                "onboarding_step": {
                    "type": "number"
                }
            }
        },
        "users": {
            "type": "array",
            "$ref": "#/definitions/user"
        }
    }
